<header class="site-header" aria-label="Site Header">
  {% if global.header.show_skip_to_content %}
  <button class="skip-to-content tab-element-page">Skip to main content</button>
  {% endif %}

  <!-- prettier-ignore -->
  {% set logo = global.header.logo %}
  {% include "../components/site-logo.njk" %}

  {% if global.header.links %}
  <ul class="header-links" aria-label="Header navigation">
    {% for link in global.header.links %}
    <li>
      <!-- prettier-ignore -->
      <a
        class="header-links__link classic-link tab-element-page"
        href="{{ link.url }}"
        {% if link.new_tab %}
          target="_blank"
          rel="noopener noreferrer"
        {% endif %}
      >
        {{ link.text }}
      </a>
    </li>
    {% endfor %}
  </ul>
  {% endif %}

  <div class="site-nav-btn-wrapper sibling-hover-burger">
    <button
      class="site-nav-btn magnet magnet-strong sibling-hover-burger__target"
      aria-controls="site-navigation"
      aria-label="Toggle navigation menu"
      aria-expanded="false"
    >
      <div class="site-nav-btn-line-wrapper">
        <span class="site-nav-btn-line"></span>
        <span class="site-nav-btn-line"></span>
      </div>
    </button>
  </div>
</header>
