<header class="site-header" aria-label="Site Header">
  {% if global.header.show_skip_to_content %}
  <button class="skip-to-content tab-element-page">Skip to main content</button>
  {% endif %}

  <!-- prettier-ignore -->
  {% set logo = global.header.logo %}
  {% include "../components/site-logo.njk" %}

  {% set links_location = 'header' %}
  {% include "../components/menu-links.njk" %}

  <div class="site-nav-btn-wrapper glitch-pair">
    <button
      class="site-nav-btn cursor-trigger glitch-trigger"
      aria-controls="site-navigation"
      aria-label="Toggle navigation menu"
      aria-expanded="false"
      data-cursor-target="cursor-target__menu-btn"
      data-cursor-class="menu-btn"
      data-glitch-target="glitch-target__menu-btn"
    >
      {% if global.header.nav_btn.text %}
      <small
        class="site-nav-btn__text glitch-text glitch-hover glitch-target__menu-btn"
      >
        {{ global.header.nav_btn.text }}
      </small>
      {% endif %}
      <!-- prettier-ignore -->
      {% set nav_btn = global.header.nav_btn %}
      {% if nav_btn.type == 'burger' %}
        {% include "../library/nav-btn-burger.njk" %}
      {% elseif nav_btn.type == 'chocolate' %}
        {% include "../library/nav-btn-chocolate.njk" %}
      {% else %}
        {% include "../library/nav-btn-kebab.njk" %}
      {% endif %}
    </button>
  </div>
</header>
