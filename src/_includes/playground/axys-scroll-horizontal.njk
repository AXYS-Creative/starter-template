<!-- prettier-ignore -->
{% set title = scroll_horizontal.title or '' %} 
{% set desc = scroll_horizontal.desc or '' %}
{% set message = scroll_horizontal.message or '' %}
{% set imgs = scroll_horizontal.imgs or [] %}
{% set img_parallax = scroll_horizontal.img_parallax or true %}

{% set modifier_class = '' %} 
{% if message %} 
  {% set modifier_class = modifier_class + ' scroll-horizontal--message' %} 
{% endif %}

{% set img_parallax_class = '' %} 
{% if img_parallax %} 
  {% set img_parallax_class = 'scroll-horizontal__figure--parallax' %} 
{% endif %}

<section class="scroll-horizontal {{ modifier_class }}">
  <div class="scroll-horizontal__pin">
    <header class="scroll-horizontal__header">
      {% if title %}
      <h2 class="scroll-horizontal__header-title">{{ title }}</h2>
      {% endif %}

      <!-- prettier-ignore -->
      {% if desc %}
      <p class="scroll-horizontal__header-desc">{{ desc }}</p>
      {% endif %}
    </header>

    <div class="scroll-horizontal__container">
      <div class="scroll-horizontal__slider gsap-stagger">
        <!-- prettier-ignore -->
        {% if imgs %} 
          {% for img in imgs %}
        <figure
          class="figure scroll-horizontal__figure {{ img_parallax_class }} gsap-stagger-child"
        >
          <img src="{{ img.src }}" alt="" />
          <figcaption class="scroll-horizontal__figure-caption">
            <h3>
              {{ img.title }}
            </h3>
            •
            <small>
              {{ img.desc }}
            </small>
          </figcaption>
        </figure>
        <!-- prettier-ignore -->
        {% endfor %} 
        {% endif %}
  
        {% if message %}
        <h3 class="scroll-horizontal__message">
          <span
            class="hs-word-1 gsap-animate"
            data-gsap-trigger="scroll-horizontal__pin-step-1"
            data-gsap-markers="false"
            >We</span
          >
          <span class="">are</span>
          <span class="text-stroke">committed</span>
          <span class="">to</span>
          <span class="color--yellow split-chars sh-split-chars-1"> building </span>
          <span class="text-stroke split-chars sh-split-chars-2"> enjoyable </span>
          web
          <span class="icons">
            <span
              class="pin-icon-mobile mask-icon"
              style="mask-image: url('/static/img/icon-google-mobile.svg')"
            ></span>
            <span
              class="pin-icon-desktop mask-icon"
              style="mask-image: url('/static/img/icon-google-desktop.svg')"
            ></span>
          </span>
          experiences
          <span class="color--coral pin-spin__star">✦</span>
        </h3>
        {% endif %}
      </div>
    </div>
  </div>
</section>
