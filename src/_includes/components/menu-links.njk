<!-- prettier-ignore -->
{% set menu_links = links %}

{% set a11y_tab = '' %}
{% if tab_nav %}
  {% set a11y_tab = 'tab-element-nav' %}
{% else %}
  {% set a11y_tab = 'tab-element-page' %}
{% endif %}

{% if menu_links %}
<menu class="menu-links hide-cursor" aria-label="navigation links">
  <!-- prettier-ignore -->
  {% for menu_link in menu_links %}
  {% if menu_link.inner_links %}
  <li>
    <!-- prettier-ignore -->
    {% set dropdown_link = menu_link %}
    {% include "./dropdown-link.njk" %}
  </li>
  {% else %}
  <li>
    <!-- prettier-ignore -->
    {% set link = menu_link %}
    {% include "./link.njk" %}
  </li>
  {% endif %} {% endfor %}
</menu>
{% endif %}
