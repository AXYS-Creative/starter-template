<div class="cta-group disable-bg">
  {% if cta_1.text and cta_1.url %}
  <!-- prettier-ignore -->
  <a
    class="cta-1 magnet magnet-wide-btn hide-mouse tab-element-page {%if content_start%}content-start{%endif%}"
    href="{{ cta_1.url }}"
    {%if cta_1.new_tab%}
      target="_blank" rel="noopener noreferrer"
    {%endif%}
    aria-label="{{ cta_1.text_desc or cta_1.text }}"
  >
    {{ cta_1.text }}
    {% if cta_1.text_desc %}
      <span class="sr-only">{{ cta_1.text_desc }}</span>
    {% endif %}
  </a>
  {% endif %}

  <!-- prettier-ignore -->
  {% if cta_2.text and cta_2.url %}
  <!-- prettier-ignore -->
  <a
    class="cta-2 tab-element-page cursor-trigger cursor-pair"
    href="{{ cta_2.url }}"
    {%if cta_2.new_tab%}
      target="_blank" rel="noopener noreferrer"
    {%endif%}
    aria-label="{{ cta_2.text_desc or cta_2.text }}"
    data-cursor-target="cursor-target__cta-2"
    data-cursor-class="cta-2"
  >
    {{ cta_2.text }}
    <span class="cta-2__icon cursor-target__cta-2"></span>
    {% if cta_2.text_desc %}
      <span class="sr-only">{{ cta_2.text_desc }}</span>
    {% endif %}
  </a>
  {% endif %}
</div>
