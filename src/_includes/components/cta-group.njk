{% if cta_1 %}
<div class="cta-group grid-bg-disable">
  <!-- prettier-ignore -->
  {% if cta_1 %}
    {% set btn = ({
      text: cta_1.text,
      text_desc: cta_1.text_desc,
      url: cta_1.url,
      new_tab: cta_1.new_tab,
      icon_start: cta_1.icon_start,
      icon_end: cta_1.icon_end,
      type: cta_1.type or 'solid',
      class: cta_1.class or 'magnet magnet-wide-btn cursor-hide',
      attributes: cta_1.attributes or ''
    }) %}
    {% include "./btn.njk" %}
  {% endif %}

  <!-- prettier-ignore -->
  {% if cta_2 %}
    {% set btn = ({
      text: cta_2.text,
      text_desc: cta_2.text_desc,
      url: cta_2.url,
      new_tab: cta_2.new_tab,
      icon_start: cta_2.icon_start,
      icon_end: cta_2.icon_end,
      icon_end_class: 'cursor-target__cta-2',
      type: cta_2.type or 'icon-end',
      class: cta_2.class or 'cursor-trigger cursor-pair',
      attributes: cta_2.attributes or 'data-cursor-target=cursor-target__cta-2 data-cursor-class=cta-2'
    }) %}
    {% include "./btn.njk" %}
  {% endif %}
</div>
{% endif %}
