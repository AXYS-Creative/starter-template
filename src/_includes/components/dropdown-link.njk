<!-- prettier-ignore -->
{% set a11y_tab = '' %}
{% if tab_nav %}
  {% set a11y_tab = 'tab-element-nav' %}
{% else %}
  {% set a11y_tab = 'tab-element-page' %}
{% endif %}

<div class="dropdown-link">
  <button class="dropdown-link__trigger {{ a11y_tab }}" aria-expanded="false">
    <span class="dropdown-link__trigger-text {{ dropdown_link.trigger_class }}">
      {{ dropdown_link.text or 'No text provided'}}
    </span>

    <!-- prettier-ignore -->
    {% if dropdown_link.icon %}
    <span
      class="dropdown-link__trigger-icon mask-icon"
      style="mask-image: url('{{ dropdown_link.icon }}')"
      role="img"
    ></span>
    {% endif %}
  </button>
  <div class="dropdown-link__accordion">
    <ul class="dropdown-link__list">
      {% for inner_link in dropdown_link.inner_links %}
      <li>
        <!-- prettier-ignore -->
        {% set link = inner_link %}
        {% include "./button.njk" %}
      </li>
      {% endfor %}
    </ul>
  </div>
</div>
