<!-- prettier-ignore -->
{% set id = clipboard_copy.id or '' %}
{% set btn_text = clipboard_copy.btn_text or 'Copy' %}
{% set btn_text_active = clipboard_copy.btn_text_active or 'Copied!' %}
{% set btn_text_swap_time = clipboard_copy.btn_text_swap_time or 2000 %}
{% set icon = clipboard_copy.icon | default('../../static/img/library/icon-google-copy.svg') %}

<!-- prettier-ignore -->
<button
  class="clipboard-copy-btn cta-1 {%if alert%}alert-trigger{%endif%}"
  aria-label="Copy to clipboard"
  data-copy-target="{{ id }}"
  {% if alert.id %}
    aria-controls="{{ alert.id }}"
  {% endif %}
>
  {% if icon %} 
  <span
    class="clipboard-copy-btn__icon cta-1__icon mask-icon"
    style="mask-image: url('{{ icon }}');"
    role="img"
  ></span>
  {% endif %}
  <span
    class="clipboard-copy-btn__text"
    data-btn-text-active="{{ btn_text_active }}"
    {% if btn_text_swap_time %}
      data-btn-text-swap-time="{{btn_text_swap_time}}"
    {% endif %}
  >
    {{ btn_text }}
  </span>
</button>
