<!-- prettier-ignore -->
{% set message = tooltip_data.message or '' %}
{% set text = tooltip_data.text or '' %}
{% set icon = tooltip_data.icon or '/static/img/library/icon-google-info.svg' %}
{% set place = tooltip_data.place or 'top' %}
{% set size = tooltip_data.size or 'md' %}

<div class="tooltip">
  <button class="tooltip__btn">
    <!-- prettier-ignore -->
    {% if text %}
    <span class="tooltip__btn-text">{{ text }}</span>
    {% elif icon %}
    <span
      class="tooltip__btn-icon mask-icon"
      style="mask-image: url('{{ icon }}');"
      role="img"
    ></span>
    {% endif %}
  </button>
  <div class="tooltip__message {{ place }} {{ size }}">
    <p>{{ message }}</p>
  </div>
</div>
