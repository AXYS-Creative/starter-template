<!-- prettier-ignore -->
{% set message = tooltip_data.message or '' %}
{% set text = tooltip_data.text or '' %}
{% set icon = tooltip_data.icon or null %}
{% set fixed = tooltip_data.fixed or '' %}

<div class="tooltip {% if fixed %} tooltip--fixed {% endif %}">
  <button class="tooltip__btn">
    <!-- prettier-ignore -->
    {% if text %}
    <span class="tooltip__text">{{ text }}</span>
    {% elif icon %}
    <img class="tooltip__icon mask-icon" style="mask-image: url({{ icon }});" />
    {% endif %}
  </button>
  <div class="tooltip__message {{ fixed }}">
    <p>{{ message }}</p>
  </div>
</div>
