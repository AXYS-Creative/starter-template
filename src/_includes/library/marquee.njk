<!-- prettier-ignore -->
{% set text = marquee.text or '' %}
{% set imgs = marquee.imgs or [] %}
{% set count = marquee.count or 1 %}
{% set velocity = marquee.velocity or false %}
{% set sensitivity = marquee.sensitivity or 5 %}

<!-- prettier-ignore -->
<div
  class="marquee {%if imgs%}marquee--imgs{%endif%}"
  {% if velocity %}data-marquee-velocity{% endif %}
  {% if velocity %}data-marquee-sensitivity="{{ sensitivity }}"{% endif %}
  {% if text %} aria-label="{{ text | removeTokens }}"{% endif %}
  role="region"
>
  {# Text marquee #}
  {% if text %}
    {% for i in range(0, count) %}
      <div class="marquee-inner" aria-hidden="true">
        <p class="marquee-inner__split">
          <span>{{ text }}</span>
          <span>{{ text }}</span>
        </p>
      </div>
    {% endfor %}
  {% endif %}

  {# Image marquee #}
  {% if imgs %}
    {% for i in range(0, count) %}
      <div class="marquee-inner" aria-hidden="true">
        <div class="marquee-inner__split">
          {% for img in imgs %}
            <img src="{{ img.src }}" alt="{{ img.alt }}" class="marquee-img" />
          {% endfor %}
        </div>
        <div class="marquee-inner__split">
          {% for img in imgs %}
            <img src="{{ img.src }}" alt="{{ img.alt }}" class="marquee-img" />
          {% endfor %}
        </div>
      </div>
    {% endfor %}
  {% endif %}
</div>
