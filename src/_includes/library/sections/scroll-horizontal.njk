<!-- prettier-ignore -->
{% set img_parallax_class = '' %} 
{% if hs_img_parallax %} 
  {% set img_parallax_class = 'scroll-horizontal__figure--parallax' %} 
{% endif %}

<section class="scroll-horizontal section-width-full">
  <div class="scroll-horizontal__pin">
    {% if hs_title %}
    <h2 class="scroll-horizontal__title h5">{{ hs_title }}</h2>
    {% endif %}

    <!-- prettier-ignore -->
    {% if hs_desc %}
    <p class="scroll-horizontal__desc">{{ hs_desc }}</p>
    {% endif %}

    <div class="scroll-horizontal__container">
      <div class="scroll-horizontal__slider">
        <!-- prettier-ignore -->
        {% if hs_imgs %} 
          {% for item in hs_imgs %}
        <figure
          class="figure scroll-horizontal__figure {{ img_parallax_class }}"
        >
          <img src="{{ item.src }}" alt="" />
          <figcaption>
            <h3 class="h6">
              {{ item.title }}
            </h3>
            <p>
              {{ item.desc }}
            </p>
          </figcaption>
        </figure>
        <!-- prettier-ignore -->
        {% endfor %} 
        {% endif %}
  
        {% if hs_message %}
        <h3 class="scroll-horizontal__message">{{ hs_message }}</h3>
        {% endif %}
      </div>
    </div>
  </div>
</section>
