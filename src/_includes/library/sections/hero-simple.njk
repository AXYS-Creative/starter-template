<!-- prettier-ignore -->
{% set title = hero_simple.title or 'No title provided' %}
{% set desc = hero_simple.desc or 'No desc provided' %}
{% set cta_1 = hero_simple.cta_1 or null %}
{% set cta_2 = hero_simple.cta_2 or null %}
{% set position = hero_simple.position or 'center' %}
{% set class = hero_simple.class %}

<section class="hero-simple hero-simple--{{ position }} {{ class }}">
  <!-- prettier-ignore -->
  {% if title %}
  <h1 class="hero-simple__title">{{ title }}</h1>
  {% endif %}

  <!-- prettier-ignore -->
  {% if desc %}
  <p class="hero-simple__desc">{{ desc | safe }}</p>
  {% endif %}

  <!-- prettier-ignore -->
  {% set content_start = true %}
  {% include "../../components/cta-group.njk" %}
  {% set content_start = false %}
</section>
