<!-- prettier-ignore -->
{% set id = accordion_data.id or 1 %}
{% set icon = accordion_data.icon or '' %}
{% set plus = accordion_data.plus or false %}
{% set single_open = accordion_data.single_open or false %}
{% set items = accordion_data.items or null %}

<div class="accordion" data-single-open="{{ single_open }}">
  {% for item in items %}
  <button
    class="accordion-btn tab-element-page"
    aria-expanded="false"
    aria-controls="accordion-{{ id }}-item-{{ loop.index }}"
  >
    <div class="accordion-label">
      <span class="accordion-label__title">{{ item.title }}</span>

      {% if icon %}
      <span
        class="accordion-label__icon mask-icon"
        style="mask-image: url('{{ icon }}')"
        aria-hidden="true"
      >
      </span>
      {% endif %}

      <!-- prettier-ignore -->
      {% if plus %}
      <span class="accordion-label__plus" aria-hidden="true">
        <span class="accordion-label__plus-line"></span>
        <span class="accordion-label__plus-line"></span>
      </span>
      {% endif %}
    </div>
    <div
      class="accordion-content"
      id="accordion-{{ id }}-item-{{ loop.index }}"
    >
      <div class="accordion-content__inner">
        <p class="accordion-content__message">{{ item.content }}</p>
      </div>
    </div>
  </button>
  {% endfor %}
</div>
