<!-- prettier-ignore -->
{% set btn_id = play_btn_id or '' %}
{% set icon_play = btn_icon_play or '/static/img/library/icon-google-play.svg' %}
{% set icon_pause = btn_icon_pause or '/static/img/library/icon-google-pause.svg' %}

<button
  class="btn-play {{ btn_play_class }} tab-element-page"
  aria-pressed="false"
  id="{{ btn_id }}"
>
  <span
    class="btn-play__icon btn-play__icon--playing"
    style="mask-image: url('{{ icon_play }}')"
    role="img"
  >
  </span>
  <span
    class="btn-play__icon btn-play__icon--paused"
    style="mask-image: url('{{ icon_pause }}')"
    role="img"
  >
  </span>
</button>
