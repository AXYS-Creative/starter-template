<section
  class="stack-scroll {{ panel_configs.size }} {{ panel_configs.placement }}"
>
  <div class="stack-pin">
    {% if panel_nav %}
    <nav class="stack-scroll__nav">
      {% for panel in panel_data %}
      <a
        href="#stack-pin-step-{{ loop.index }}"
        class="stack-scroll__nav-link classic-link tab-element-page"
      >
        {{ panel.title }}
      </a>
      {% endfor %}
    </nav>
    {% endif %}

    <!-- prettier-ignore -->
    {% if panel_copy %}
    <div class="stack-scroll__copy stack-scroll__copy--desktop">
      {% if panel_copy.title %}
      <h2 class="stack-scroll__copy-title h5">{{ panel_copy.title }}</h2>
      {% endif %} {% if panel_copy.desc %}
      <p class="stack-scroll__copy-desc">{{ panel_copy.desc }}</p>
      {% endif %} {% if panel_copy.cta_1 %}
      <!-- prettier-ignore -->
      {% set cta_1 = panel_copy.cta_1 %}
      {% set cta_2 = panel_copy.cta_2 %}
      {% include "../components/cta-group.njk" %}
      {% endif %}
    </div>
    {% endif %}

    <!-- prettier-ignore -->
    {% for panel in panel_data %}
    <div class="stack-panel stack-panel-{{ loop.index }}">
      {% if panel.icon %}
      <span
        class="stack-panel__icon mask-icon"
        style="mask-image:url({{ panel.icon }})"
      ></span>
      {% endif %} {% if panel.title %}
      <h3 class="stack-panel__title h5">
        {{ panel.title }}
      </h3>
      {% endif %} {% if panel.desc %}
      <p class="stack-panel__desc">{{ panel.desc }}</p>
      {% endif %} {% if panel.cta_1 %}
      <!-- prettier-ignore -->
      {% set cta_1 = panel.cta_1 %}
      {% set cta_2 = null %}
      {% include "../components/cta-group.njk" %}
      {% endif %}
    </div>
    {% endfor %}
  </div>

  <!-- prettier-ignore -->
  <div class="stack-pin-steps pin-steps" aria-hidden="true">
    {% for step in panel_data %}
    <div 
      class="stack-pin-step stack-pin-step-{{ loop.index }} pin-step"
      id="stack-pin-step-{{ loop.index }}"
    >
    </div>
    {% endfor %}
    
   </div>
</section>
