<section
  class="stack-scroll {{ panel_configs.size }} {{ panel_configs.placement }}"
>
  <div class="stack-pin">
    {% if panel_nav %}
    <nav class="stack-scroll__nav">
      {% for panel in panel_data %}
      <a
        href="#stack-pin-step-{{ loop.index }}"
        class="stack-scroll__nav-link classic-link tab-element-page"
      >
        {{ panel.title }}
      </a>
      {% endfor %}
    </nav>
    {% endif %}

    <!-- prettier-ignore -->
    {% if panel_section_title or panel_section_desc %}
    <div class="stack-scroll__copy">
      <h2 class="stack-scroll__copy-title h6">{{ panel_section_title }}</h2>
    </div>
    {% endif %}

    <!-- prettier-ignore -->
    {% for panel in panel_data %}
    <div class="stack-panel stack-panel-{{ loop.index }}">
      <h3 class="stack-panel__title h5">{{ panel.title }}</h3>
      <p class="stack-panel__desc">{{ panel.desc }}</p>
      {% if panel.cta.text %}
      <!-- prettier-ignore -->
      <a 
        class="cta-1" 
        href="{{ panel.cta.url }}"
        {% if panel.cta.new_tab %}
          target="_blank" rel="noopener noreferrer"
        {% endif %}
      >
        {{ panel.cta.text }}
      </a>
      {% endif %}
    </div>
    {% endfor %}
  </div>

  <!-- prettier-ignore -->
  <div class="stack-pin-steps pin-steps" aria-hidden="true">
    {% for step in panel_data %}
    <div 
      class="stack-pin-step stack-pin-step-{{ loop.index }} pin-step"
      id="stack-pin-step-{{ loop.index }}"
    >
    </div>
    {% endfor %}
    
   </div>
</section>
