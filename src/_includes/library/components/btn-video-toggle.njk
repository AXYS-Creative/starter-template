<!-- prettier-ignore -->
{% set id = btn_video_toggle.id or '' %}
{% set class = btn_video_toggle.class or '' %}
{% set attributes = btn_video_toggle.attributes or '' %}
{% set placement = btn_video_toggle.placement or '' %}
{% set icon_play = btn_video_toggle.icon_play | default('/static/img/library/icon-google-play.svg') %}
{% set icon_pause = btn_video_toggle.icon_pause | default('/static/img/library/icon-google-pause.svg') %}
{% set video_type_autoplay = btn_video_toggle.video_type_autoplay or false %}

{% if video_type_autoplay %}
  {% set class = class + ' btn-video-toggle--inverse' %}
{% endif %}

{% if placement %}
  {% set data_placement = 'data-placement='~placement~'' %}
{% endif %}

<!-- prettier-ignore -->
<button
  class="btn-video-toggle {{ class }} tab-element-page"
  aria-pressed="false"
  aria-controls="{{ id }}"
  {{ attributes }}
  {{ data_placement }}
>
  {% set icon_svg = ({ 
    src: icon_play, 
    class: 'btn-video-toggle__icon btn-video-toggle__icon--playing' 
  }) %}
  {% include "../../components/icon-svg.njk" %}

  {% set icon_svg = ({ 
    src: icon_pause, 
    class: 'btn-video-toggle__icon btn-video-toggle__icon--paused' 
  }) %}
  {% include "../../components/icon-svg.njk" %}
</button>
