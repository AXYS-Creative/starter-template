<!-- prettier-ignore -->
{% set default_selected = '' %}

{% set toggle_slider = tabs.toggle_slider or 'solid' %}
{% set panels = tabs.panels or [] %}

{% set tabs_class = '' %}
{% if toggle_slider == 'solid' %}
  {% set tabs_class = 'toggle-slider toggle-slider--solid' %}
{% endif %}

{% if toggle_slider == 'underline' %}
  {% set tabs_class = 'toggle-slider toggle-slider--underline' %}
{% endif %}

<div class="tabs tabs--component cursor-hide">
  <div class="tabs-list {{ tabs_class }}" role="tablist">
    {% for panel in panels %}
    <!-- prettier-ignore -->
    {% if loop.index == 0 %}
      {% set default_selected = true %}
    {% else %}
      {% set default_selected = false %}
    {% endif %}
    <button
      class="tabs-option tab-element-page"
      id="tab-option-{{ loop.index }}"
      role="tab"
      aria-controls="tab-panel-{{ loop.index }}"
      aria-selected="{{ default_selected }}"
    >
      Tab {{ loop.index }}
    </button>
    {% endfor %}

    <!-- prettier-ignore -->
    {% if toggle_slider %}
    <div class="tabs-list-slider"></div>
    {% endif %}
  </div>

  <div class="tabs-content">
    {% for panel in panels %}
    <!-- prettier-ignore -->
    <div
      class="tabs-panel"
      id="tab-panel-{{ loop.index }}"
      role="tabpanel"
      aria-labelledby="tab-option-{{ loop.index }}"
      {% if not loop.first %}hidden{% endif %}
    >
      Content for Tab {{ loop.index }}
    </div>
    {% endfor %}
  </div>
</div>
