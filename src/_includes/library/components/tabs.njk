{% set default_selected = '' %}

<div class="tabs tabs--component">
  <div class="tabs__list" role="tablist">
    {% for item in tab_list %}
    <!-- prettier-ignore -->
    {% if loop.index == 0 %}
      {% set default_selected = true %}
    {% else %}
      {% set default_selected = false %}
    {% endif %}
    <button
      class="tabs__btn tab-element-page"
      id="tab-btn-{{ loop.index }}"
      role="tab"
      aria-controls="tab-panel-{{ loop.index }}"
      aria-selected="{{ default_selected }}"
    >
      Tab {{ loop.index }}
    </button>
    {% endfor %}
  </div>

  <div class="tabs__content">
    {% for item in tab_list %}
    <!-- prettier-ignore -->
    <div
      class="tabs__panel"
      id="tab-panel-{{ loop.index }}"
      role="tabpanel"
      aria-labelledby="tab-btn-{{ loop.index }}"
      {% if not loop.first %}hidden{% endif %}
    >
      Content for Tab {{ loop.index }}
    </div>
    {% endfor %}
  </div>
</div>
