<!-- prettier-ignore -->
<form
  class="form-redirect"
  action="/contact"
  method="post"
  name="form-redirect"
  netlify
  netlify-honeypot="bot-field"
  {% if form_data.show_recaptcha == true %}
    data-netlify-recaptcha="true"
    hidden
  {% endif %}
>
  <input type="hidden" name="bot-field" />

  <div class="form-block form-block--name">
    <input
      class="input tab-element-page"
      id="name"
      name="name"
      type="text"
      placeholder=" "
      title="Please enter your first and last name."
      aria-label="Please enter your first and last name."
      required
    />
    <label class="label" for="name">Name</label>
  </div>

  <div class="form-block-group form-block-group--email-phone">
    <div class="form-block form-block--email">
      <input
        class="input tab-element-page"
        id="email"
        name="email"
        type="email"
        placeholder=" "
        title="Please enter your email."
        aria-label="Please enter your email."
        required
      />
      <label class="label" for="email">Email</label>
    </div>
    <div class="form-block form-block--phone">
      <input
        class="input tab-element-page"
        id="phone"
        name="phone"
        type="tel"
        pattern="[0-9]*"
        placeholder=" "
        title="Please enter your phone number."
        aria-label="Please enter your phone number."
        required
      />
      <label class="label" for="phone">Phone</label>
    </div>
  </div>

  <div class="form-block form-block--city">
    <input
      class="input tab-element-page"
      id="city"
      name="city"
      type="text"
      placeholder=" "
      title="Please enter your city."
      aria-label="Please enter your city."
      required
    />
    <label class="label" for="city">City</label>
  </div>

  <div class="form-block-group form-block-group--state-zip">
    <div class="form-block form-block--state">
      <input
        class="input tab-element-page"
        id="state"
        name="state"
        type="text"
        placeholder=" "
        title="Please enter your state."
        aria-label="Please enter your state."
        required
      />
      <label class="label" for="state">State</label>
    </div>
    <div class="form-block form-block--zip">
      <input
        class="input tab-element-page"
        id="zip"
        name="zip"
        type="number"
        inputmode="numeric"
        placeholder=" "
        title="Please enter your zip code."
        aria-label="Please enter your zip code."
        required
      />
      <label class="label" for="zip">Zip</label>
    </div>
  </div>

  {% if form_data.show_field_discovery %}
  <div class="form-block form-block--discovery">
    <textarea
      class="input input--textarea tab-element-page"
      id="discovery"
      maxlength="{{ form_data.max_count_discovery }}"
      spellcheck="true"
      name="How did you hear about us?"
      title="How did you hear about us?"
      aria-label="How did you hear about us?"
      placeholder=" "
      required
    ></textarea>
    <label
      class="label label--textarea"
      id="discovery-label"
      for="discovery"
      aria-live="assertive"
    >
      How did you hear about us?
      <!-- prettier-ignore -->
      {% if form_data.max_count_discovery %}
      <span class="nested-label"></span>
      {% endif %}
    </label>
  </div>
  {% endif %}

  <!-- prettier-ignore -->
  {% if form_data.show_recaptcha == true %}
  <div data-netlify-recaptcha="true" class="recaptcha" style="width: 304px; height: 78px;"></div>
  {% endif %}

  <button class="cta-1 tab-element-page" type="submit">
    Submit
    <!-- <div class="hover-fill"></div> -->
  </button>
</form>
