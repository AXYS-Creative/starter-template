{% if carousel_slides %}
<div
  class="swiper mySwiper carousel-swiper"
  data-autoplay-enabled="{{ carousel_autoplay.enabled }}"
  data-autoplay-interval="{{ carousel_autoplay.interval }}"
  data-pagination="{{ carousel_pagination }}"
>
  <div class="swiper-wrapper tab-element-page">
    {% for slide in carousel_slides %}
    <div class="swiper-slide">
      <img src="{{ slide.img }}" alt="{{ slide.title }}" />
    </div>
    {% endfor %}
  </div>

  <div class="swiper-controls">
    <button class="cta-1 swiper-button-prev tab-element-page">
      {% if carousel_controls.btn_img %}
      <img
        class="swiper-button-prev__img"
        src="{{ carousel_controls.btn_img }}"
        alt=""
        eleventy:ignore
      />
      {% endif %}

      <!-- prettier-ignore -->
      {% if carousel_controls.prev_text %}
      {{ carousel_controls.prev_text }}
      {% endif %}
    </button>
    <button class="cta-1 swiper-button-next tab-element-page">
      {% if carousel_controls.next_text %}
      {{ carousel_controls.next_text }}
      {% endif %}

      <!-- prettier-ignore -->
      {% if carousel_controls.btn_img %}
      <img
        class="swiper-button-next__img"
        src="{{ carousel_controls.btn_img }}"
        alt=""
        eleventy:ignore
      />
      {% endif %}
    </button>

    <!-- prettier-ignore -->
    {% if carousel_pagination %}
    <div class="swiper-pagination"></div>
    {% endif %}
  </div>
</div>
{% endif %}
