<!-- prettier-ignore -->
{% set use_multi_toggle = true %}

{% set theme_toggle_class = '' %}
{% if use_multi_toggle %}
  {% set theme_toggle_class = 'theme-toggle--multi' %}
{% endif %}

<fieldset
  class="theme-toggle {{ theme_toggle_class }} cursor-hide"
  role="radiogroup"
  aria-label="Select a display theme"
>
  <legend class="sr-only">Select a display theme:</legend>

  <label for="theme-system" class="theme-toggle__option" title="System theme">
    <input
      class="tab-element-page"
      type="radio"
      id="theme-system"
      name="theme"
      value="system"
      aria-label="System theme"
      checked
    />
    <span class="sr-only">System</span>
    <!-- prettier-ignore -->
    {% set icon_svg = ({ 
      src: '/static/img/library/icon-google-desktop.svg', 
      class: 'theme-toggle__icon theme-toggle__icon--desktop' 
    }) %}
    {% include "../../components/icon-svg.njk" %}
    
    {% set icon_svg = ({ 
      src: '/static/img/library/icon-google-mobile.svg', 
      class: 'theme-toggle__icon theme-toggle__icon--mobile' 
    }) %}
    {% include "../../components/icon-svg.njk" %}
  </label>

  <label for="theme-light" class="theme-toggle__option" title="Light theme">
    <input
      class="tab-element-page"
      type="radio"
      id="theme-light"
      name="theme"
      value="light"
      aria-label="Light theme"
    />
    <span class="sr-only">Light</span>
    <!-- prettier-ignore -->
    {% set icon_svg = ({ 
      src: '/static/img/library/icon-google-sun.svg', 
      class: 'theme-toggle__icon' 
    }) %}
    {% include "../../components/icon-svg.njk" %}
  </label>

  <label for="theme-dark" class="theme-toggle__option" title="Dark theme">
    <input
      class="tab-element-page"
      type="radio"
      id="theme-dark"
      name="theme"
      value="dark"
      aria-label="Dark theme"
    />
    <span class="sr-only">Dark</span>
    <!-- prettier-ignore -->
    {% set icon_svg = ({ 
      src: '/static/img/library/icon-google-moon.svg', 
      class: 'theme-toggle__icon' 
    }) %}
    {% include "../../components/icon-svg.njk" %}
  </label>

  {% if use_multi_toggle %}
  <div class="theme-toggle--multi__slider" aria-hidden="true"></div>
  {% endif %}
</fieldset>
