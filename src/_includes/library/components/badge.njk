<!-- prettier-ignore -->
{% set badge_text = badge.text or 'No Text Provided' %}
{% set badge_icon = badge.icon or '' %}

<div class="badge">
  <!-- prettier-ignore -->
  {% if badge_icon %}
    {% set icon_svg = ({ src: badge_icon, class: 'badge__icon' }) %}
    {% include "../../components/icon-svg.njk" %}
  {% endif %}
  <span class="badge__text">{{ badge_text }}</span>
</div>
