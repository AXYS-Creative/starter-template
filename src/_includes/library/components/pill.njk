<!-- prettier-ignore -->
{% set pill_text = pill.text or 'No Text Provided' %}
{% set pill_icon = pill.icon or '' %}

<div class="pill">
  {% if pill_icon %}
  <span
    class="pill__icon mask-icon"
    style="mask-image: url('{{ pill_icon }}');"
    role="img"
  >
  </span>
  {% endif %}
  <span class="pill__text">{{ pill_text }}</span>
</div>
