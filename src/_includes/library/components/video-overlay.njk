<div
  class="video-overlay"
  id="video-overlay"
  aria-label="video overlay"
  aria-hidden="true"
  aria-modal="true"
  role="dialog"
  hidden
>
  <video
    class="video-player"
    src=""
    controls
    aria-label="Video player. Select to play the video."
  ></video>

  <!-- prettier-ignore -->
  {% set a11y_tab = 'tab-element-video-overlay' %}
  {% set btn = ({
    text_desc: 'Close video overlay',
    type: 'solid',
    icon_end: '/static/img/library/icon-google-x-lg.svg',
    class: 'video-overlay__close btn--bg-slide',
    attributes: 'data-btn-slide="up"'
  }) %}
  {% include "../../components/btn.njk" %}
</div>
