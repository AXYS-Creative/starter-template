<!-- prettier-ignore -->
{% set prefix = counter_data.prefix or '' %}
{% set digit = counter_data.digit or 0 %}
{% set suffix = counter_data.suffix or '' %}
{% set label = counter_data.label or '' %}
{% set spoken_label = counter_data.spoken_label or '' %}
{% set duration = counter_data.duration or 2400 %}
{% set once = counter_data.once or false %}
{% set comma = counter_data.comma or false %}
{% set ticker = counter_data.ticker or false %}
{% set class = counter_data.class or '' %}

{% set ticker_class = '' %}
{% if ticker %}
{% set ticker_class = 'counter__value-digit counter__value-digit--ticker' %}
{% else %}
{% set ticker_class = 'counter__value-digit' %}
{% endif %}

<!-- prettier-ignore -->
<h2 
  class="counter {{ class }}" 
  data-counter-number="{{ digit }}"
  data-counter-duration="{{ duration }}"
  data-counter-comma="{{ comma }}"
  data-counter-once="{{ once }}"
  aria-label="{{ spoken_label }}"
>
  <span class="counter__value" aria-hidden="true">
    <span class="counter__value-prefix">{{ prefix }}</span>
    <span class="{{ ticker_class }}"></span>
    <span class="counter__value-suffix">{{ suffix }}</span>
  </span>
  {% if label %}
    <span class="counter__label" aria-hidden="true">{{ label }}</span>
  {% endif %}
</h2>
