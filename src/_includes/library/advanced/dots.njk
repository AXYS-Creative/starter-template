<!-- prettier-ignore -->
{% set width = dots.width or '100%' %}
{% set height = dots.height or '100%' %}
{% set size = dots.size or 3 %}
{% set gap = dots.gap or 24 %}
{% set restore = dots.restore or 0.5 %}
{% set sensitivity = dots.sensitivity or 0.9 %}
{% set distance = dots.distance or 100 %}
{% set strength = dots.strength or 500 %}
{% set color = dots.color or 'var(--color-font--primary)' %}
{% set illuminate = dots.illuminate or false %}
{% set grow = dots.grow or false %}

<svg
  class="dots-flow grid-bg-disable"
  xmlns="http://www.w3.org/2000/svg"
  width="{{ width }}"
  height="{{ height }}"
  viewBox="0 0 {{ width }} {{ height }}"
  data-dot-size="{{ size }}"
  data-dot-gap="{{ gap }}"
  data-dot-restore="{{ restore }}"
  data-dot-sensitivity="{{ sensitivity }}"
  data-dot-distance="{{ distance }}"
  data-dot-strength="{{ strength }}"
  data-dot-color="{{ color }}"
  data-dot-illuminate="{{ illuminate }}"
  data-dot-grow="{{ grow }}"
></svg>
