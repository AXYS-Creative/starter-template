  {% set accordion_data = library.accordion.accordion_1 %}
  {% include '../_includes/library/accordion.njk' %}
  <br />
  <br />
  <br />
  <br />
  <p style="display: block; margin-bottom: 64px">
    Accordion with <code>plus</code> config
